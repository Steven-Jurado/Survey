@using Entity
@using Business

@inject NavigationManager NavManager

<a href="survey/create" class="btn btn-success mb-3">Crear Encuesta...</a>
<hr />
<a href="users/list" class="btn btn-success mb-3">Listar Usuarios...</a>
<hr />

<EditForm Model="OUser">
    <div class="form-group">
        <label>Referencias:</label>
        <InputText @bind-Value="OUser.IdUser" class="form-control" />
    </div>
    <div class="form-group">
        <label> Ingrese su Nombre:</label>
        <InputText @bind-Value="OUser.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ingrese su Apellido:</label>
        <InputText @bind-Value="OUser.LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ingrese su Nickname:</label>
        <InputText @bind-Value="OUser.NickName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ingrese su Correo:</label>
        <InputText @bind-Value="OUser.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ingrese Una Palabra Clave:</label>
        <InputText @bind-Value="OUser.Password" class="form-control" />
    </div>
    <input type="button" class="btn btn-success " value="Crear Usuario..." @onclick="SaveUser" />
</EditForm>

@code {
    UserEntity OUser = new UserEntity();

    private void SaveUser()
    {
        B_Users.CreateUsers(OUser);
        NavManager.NavigateTo("users/list");
    }
}
