@using Entity
@using Business

<h1 class="text-center h-2 mb-3" > Lista de  Preguntas <span class="oi oi-list" ></span> </h1>
<a href="answer/create" class="btn btn-success mb-3">Crear Respuesta...</a>
<hr />
<div>
    <table class="table table-hover table-bordered ">
        <thead>
            <tr>
                <th>Referencia</th>
                <th>Preguntas</th>
                <th>Fecha Creada</th>
                <th>Referencia Categoria</th>
                <th>Referencia Encuesta</th>
                <th>Referencia Usuario</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var question in Questions)
            {
                <tr>
                    <td>@question.IdQuestions</td>
                    <td>@question.GetQuestion</td>
                    <td>@question.CreateAt</td>
                    <td>@question.CategoryId</td>
                    <td>@question.SurveyId</td>
                    <td>@question.UserId</td>
                    <td> <a href="questions/update/@question.IdQuestions" class="btn btn-danger" >Actualizar</a>  </td>
                </tr>
            }

        </tbody>

    </table>
</div>

@code {
    List<QuestionEntity> Questions = new List<QuestionEntity>();

    protected async override Task OnInitializedAsync()
    {
        Questions = B_Questions.QuestionsList();
    }
}
